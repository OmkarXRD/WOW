<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/billingRvMonthName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="gone"
        android:layout_marginTop="4dp"
        android:background="@color/light_grey_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="July"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/silverCoinsRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/billingRvMonthName"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/silverCoinsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deducted Gold Coins"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:singleLine="true"
            />

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07/25/2022 19:26:46"
            android:fontFamily="sans-serif-medium"
            android:layout_below="@+id/silverCoinsTV"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:singleLine="true"
            />

        <TextView
            android:id="@+id/billingGoldCoinTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- 400"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/blue_color"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/billingSilverCoinsImg"
            android:layout_marginEnd="5dp"
            android:textSize="15sp"
            android:singleLine="true"
            />

        <ImageView
            android:id="@+id/billingSilverCoinsImg"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/coins_img"
            android:contentDescription="@string/description"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/light_grey_color"
        android:layout_below="@+id/silverCoinsRL"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"/>

</RelativeLayout>