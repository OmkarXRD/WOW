<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >

    <LinearLayout
        android:id="@+id/linearRRRS"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_marginVertical="100dp"
        android:elevation="10dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/logoutdesign"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/vip1CoinsImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="30dp"
                android:src="@drawable/database" />

            <TextView
                android:id="@+id/vip1CoinsTv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="175dp"
                android:layout_marginTop="22dp"
                android:text="+600"
                android:textColor="#977823"
                android:textSize="22sp"
                android:textStyle="italic|bold" />


            <TextView
                android:id="@+id/vip1CoinsTv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vip1CoinsImg"
                android:layout_centerHorizontal="true"
                android:text="600 coins/day"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vip1CoinsTv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vip1CoinsTv2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="20dp"
                android:gravity="center_horizontal"
                android:text="Gst 600 coins/day in Daily Reward Refresh time. UTC +0"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/w3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vip1CoinsTv3"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="20dp"
                android:gravity="center_horizontal"
                android:text="Can be collected after purchase no reward for gifted VIP"
                android:textSize="14sp"
                android:textColor="#977823"/>


            <Button
                android:id="@+id/coinDaysConfirmBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/w3"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#977823"
                android:text="Confirm" />


        </RelativeLayout>
    </LinearLayout>
</LinearLayout>

