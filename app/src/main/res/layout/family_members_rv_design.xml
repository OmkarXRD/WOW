<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:layout_marginEnd="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/familyMembersCirImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/wow_icon"
        android:layout_marginStart="10dp"
        android:contentDescription="@string/description"/>

    <TextView
        android:id="@+id/familyMembersNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Rohabn"
        android:layout_toRightOf="@+id/familyMembersCirImg"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:fontFamily="sans-serif-medium"/>

    <ImageView
        android:id="@+id/adminTV"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:layout_toRightOf="@id/familyMembersNameTv"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_10"
        android:elevation="@dimen/dp_20"
        android:visibility="gone"
        android:src="@drawable/joinericon" />
    <RelativeLayout
        android:id="@+id/top2FamilyFireRL"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        android:background="@drawable/family_fire_frame">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/newFamilyFireTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="12"
                android:singleLine="true"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="2dp"
                android:layout_toRightOf="@+id/newFamilyFireTV"
                android:contentDescription="@string/description"
                android:src="@drawable/fire" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>