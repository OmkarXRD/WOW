<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:layout_marginEnd="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/familyMembersCirImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/wow_icon"
        android:layout_marginStart="10dp"
        android:contentDescription="@string/description"/>
    <ImageView
        android:id="@+id/adminIcon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:elevation="@dimen/dp_20"
        android:src="@drawable/leaderimage"
        android:visibility="gone"
        />
    <LinearLayout
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/familyMembersCirImg"
        android:orientation="vertical">
    <TextView
        android:id="@+id/familyMembersNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Rohabn"
        android:layout_toRightOf="@+id/familyMembersCirImg"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif-medium"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/adminTV"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:elevation="@dimen/dp_20"
                    android:visibility="visible"
                    android:src="@drawable/joinericon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/genderLl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/round_shape_corners_8dp"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp">



                <ImageView
                    android:id="@+id/genderIconFamMember"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_toRightOf="@id/adminTV"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/description"
                    android:src="@drawable/male"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/genderTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="10sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/sendingLinearLayout"
                android:layout_width="50dp"
                android:layout_height="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp">

                <ImageView
                    android:id="@+id/lvlimg"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/description"
                    android:src="@drawable/starlevel" />

                <TextView
                    android:id="@+id/sendingLvl"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="0"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="10sp" />


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/memberReceivingRL"
                android:layout_width="50dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_marginVertical="@dimen/dp_5">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/receivingLayout"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:id="@id/imggg"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_5"
                    android:src="@drawable/receiveicon" />

                <TextView
                    android:id="@+id/receivingLvl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:layout_toRightOf="@id/imggg"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/top2FamilyFireRL"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        android:background="@drawable/family_fire_frame">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/newFamilyFireTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="12"
                android:singleLine="true"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="2dp"
                android:layout_toRightOf="@+id/newFamilyFireTV"
                android:contentDescription="@string/description"
                android:src="@drawable/fire" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>