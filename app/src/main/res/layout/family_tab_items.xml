<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/nearByLiveCardViewId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="@dimen/dp_10"
        app:cardElevation="@dimen/dp_6">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <ImageView
                android:id="@+id/nearbyLiveImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/photo2" />

            <ImageView
                android:id="@+id/NearBylockLiveImage"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"

                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/padlock" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="7dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/gradienttwo"
                android:gravity="center"
                android:elevation="@dimen/dp_10"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins"
                    android:paddingHorizontal="@dimen/dp_2"
                    android:text="Live House"
                    android:textColor="@color/white"
                    android:textSize="8sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/nearByLiveCountTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="5dp"
                android:fontFamily="@font/poppins"
                android:text="384"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="7dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/wallet_background"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp">

                <TextView
                    android:id="@+id/nearUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold" />
            </LinearLayout>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/progressImg"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginVertical="7dp"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/description"
                app:lottie_autoPlay="true"
                app:lottie_colorFilter="#fa02e6"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/live_animation" />


        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
