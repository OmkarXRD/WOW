<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/topDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textSize="12sp"
            android:visibility="gone"
            android:layout_marginStart="20dp"
            android:text="2022-07-26"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textSize="12sp"
                android:layout_marginEnd="20dp"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:layout_alignParentEnd="true"
                android:text="2022-07-26  19:26"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/followingCirleImg"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/boys_iamge"
                    android:contentDescription="@string/description"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/followingUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="Harendra Singh"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-medium"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/genLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="5dp"
                            android:orientation="horizontal"
                            android:background="@drawable/round_shape_corners_8dp"
                            android:layout_marginTop="5dp">

                            <ImageView
                                android:id="@+id/followingGenderImg"
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:src="@drawable/male"
                                app:tint="@color/white"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="@string/description"/>
                            <TextView
                                android:id="@+id/followingAgeTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="35"
                                android:textSize="10sp"
                                android:layout_marginStart="2dp"
                                android:textColor="@color/white"/>


                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/sendingLayout"
                            android:layout_width="50dp"
                            android:layout_height="15dp"
                            android:paddingHorizontal="5dp"
                            android:orientation="horizontal"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/round_shape_corners_8dp" >

                            <ImageView
                                android:id="@+id/lvlimg"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="@string/description"
                                android:src="@drawable/starlevel" />
                            <TextView
                                android:id="@+id/sendingLvl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6"
                                android:textSize="10sp"
                                android:layout_marginStart="4dp"
                                android:textColor="@color/white"/>


                        </LinearLayout>
                        <RelativeLayout
                            android:id="@+id/followingReceivingRL"
                            android:layout_width="50dp"
                            android:layout_height="15dp"
                            android:layout_weight="1"
                            android:layout_marginStart="2dp"
                            android:layout_marginVertical="@dimen/dp_5">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/receivingLayout"
                                android:scaleType="fitXY"/>
                            <ImageView
                                android:id="@id/imggg"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/dp_5"
                                android:src="@drawable/receiveicon" />

                            <TextView
                                android:id="@+id/receivingLvl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginHorizontal="@dimen/dp_5"
                                android:layout_toRightOf="@id/imggg"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="10sp" />
                        </RelativeLayout>
                    </LinearLayout>



                </LinearLayout>



            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>