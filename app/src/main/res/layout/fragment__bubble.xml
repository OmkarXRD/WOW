<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragments.Profile.My_look.Fragment_Bubble">

    <ImageView
        android:id="@+id/vipNoImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:background="@drawable/shoppingbag"
        android:visibility="gone"
        android:layout_marginTop="200dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/gray_d"
        android:layout_marginTop="30dp"
        android:text="@string/no_bubble"
        android:visibility="gone"
        android:layout_marginHorizontal="40dp"
        />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/MyLookBubbleRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/bubble_rv_design"
            android:background="@color/light_grey_bg_color"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="4dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"/>


</LinearLayout>