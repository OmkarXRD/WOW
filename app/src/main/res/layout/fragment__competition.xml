<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".Fragments.Profile.Family.Fragment_Competition">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/level_first"
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="195dp"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/frame1">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_photo"
                        android:layout_width="100dp"
                        android:layout_height="88dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/photo"
                        app:civ_border_color="@color/white"
                        android:padding="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/family_frame_3"
                        app:civ_border_width="0dp" />

                    <TextView
                        android:id="@+id/top2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profile_photo"
                        android:layout_centerHorizontal="true"
                        android:text="TOP 2"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/golden_color"
                        android:textSize="20sp"
                        android:textStyle="bold" />

<!--                    <RelativeLayout-->
<!--                        android:layout_width="100dp"-->
<!--                        android:layout_height="40dp">-->
<!--                        -->
<!--                        <com.github.siyamed.shapeimageview.HexagonImageView-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="match_parent"-->
<!--                            app:siBorderWidth="2dp"-->
<!--                            app:siShape="@integer/anim_duration"-->
<!--                            android:src="@color/grey"/>-->

<!--                    </RelativeLayout>-->


                    <TextView
                        android:id="@+id/warrior"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/top2"
                        android:layout_centerHorizontal="true"
                        android:text="THE WARRIOR"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="195dp"
                    android:layout_gravity="top"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/frame2_">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_photo2"
                        android:layout_width="100dp"
                        android:layout_height="88dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/photo"
                        android:padding="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/family_frame_1"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="0dp" />

                    <TextView
                        android:id="@+id/top3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profile_photo2"
                        android:layout_centerHorizontal="true"
                        android:text="TOP 1"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/golden_color"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/mahakal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/top3"
                        android:layout_centerHorizontal="true"
                        android:text="THE WARRIOR"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="195dp"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/frame3">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_photo3"
                        android:layout_width="100dp"
                        android:layout_height="88dp"
                        android:layout_centerHorizontal="true"
                        android:padding="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/family_frame_2"
                        android:src="@drawable/photo"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="0dp" />

                    <TextView
                        android:id="@+id/top4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profile_photo3"
                        android:layout_centerHorizontal="true"
                        android:text="TOP 3"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/golden_color"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/unique"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/top4"
                        android:layout_centerHorizontal="true"
                        android:text="THE WARRIOR"
                        android:textColor="@color/white"
                        android:layout_marginTop="10dp"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_compti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/level_first"
                android:layout_marginHorizontal="4dp"

                android:background="@color/white"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:spanCount="1"
                tools:listitem="@layout/item_new" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>