<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_header_edit_profile_hv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/editProfileBackImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            tools:ignore="ContentDescription" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Edit Profile"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_hospital_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_hospital_id"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/demo_user_profile_img" />

        <ImageView
            android:id="@+id/ic_plus_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_hospital_id"
            android:layout_marginStart="-35dp"
            android:layout_marginTop="-30dp"
            android:layout_toEndOf="@id/img_hospital_id"
            android:background="@drawable/button_design_round_hv"
            android:backgroundTint="@color/white"
            android:padding="@dimen/dp_5"
            android:src="@drawable/ic_plus_hv"
            app:tint="@color/green"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/hospital_name_id_hv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_hospital_id"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:text="Username"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hospital_address_hv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hospital_name_id_hv"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/app_name"
            android:textSize="@dimen/sp_12" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#DDDDDD">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:text="Edit Profile"

            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:text="12/30"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <EditText
        android:id="@+id/edt_phone_hv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/bg_like_cardview_hv"
        android:backgroundTint="#FFB8CA"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:maxLength="15"
        android:padding="@dimen/dp_8"
        android:singleLine="true"
        android:hint="Full Name"
        android:textColor="@color/black"
        android:textSize="15sp"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/edtGender"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/bg_like_cardview_hv"
        android:backgroundTint="#FFB8CA"
        android:importantForAutofill="no"
        android:gravity="center_vertical"
        android:inputType="textPersonName"
        android:padding="@dimen/dp_8"
        android:singleLine="true"
        android:hint="Gender"
        android:textColor="@color/black"
        android:textSize="15sp"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/edtDOB"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/bg_like_cardview_hv"
        android:backgroundTint="#FFB8CA"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:maxLength="15"
        android:padding="@dimen/dp_8"
        android:singleLine="true"
        android:hint="Date of Birth"
        android:focusable="false"
        android:textColor="@color/black"
        android:textSize="15sp"
        tools:ignore="RtlSymmetry" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_like_cardview_hv"
        android:backgroundTint="#FFB8CA"
        android:layout_marginHorizontal="20dp">

        <TextView
                android:id="@+id/editCountryTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:maxLength="15"
                android:singleLine="true"
                android:hint="Country"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:paddingStart="8dp"
                tools:ignore="RtlSymmetry" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                android:id="@+id/ccp"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:ccp_showFlag="true"
                app:ccp_showPhoneCode="false"
                app:ccp_showFullName="false"
                app:ccp_showArrow="true"
                app:ccp_showNameCode="false"
                app:ccp_defaultNameCode="US"/>

        </RelativeLayout>

    </RelativeLayout>




    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save_profile"
        android:layout_width="@dimen/dp_150"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/button_design_round_hv"
        android:hint="@string/save"
        android:backgroundTint="#F988A4"
        android:textColorHint="@color/white" />

</LinearLayout>