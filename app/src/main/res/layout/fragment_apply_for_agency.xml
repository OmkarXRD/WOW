<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragments.ApplyForAgencyFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize">

                <ImageView
                    android:id="@+id/imageBack_applyAgency"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/ic_baseline_arrow_back_24"
                    android:contentDescription="@string/description"
                    app:tint="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_toRightOf="@+id/imageBack_applyAgency"
                    android:fontFamily="sans-serif-medium"
                    android:text="Apply For Agency"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="20sp"
                android:paddingVertical="5dp">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Special Approval : "
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/approval_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toEndOf="@id/name"
                    android:background="@android:color/transparent"
                    android:hint="Enter name "
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="8dp"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20sp"
                android:paddingVertical="5dp">

                <TextView
                    android:id="@+id/id_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Aadhaar card front: "
                    android:textColor="@color/black" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/id_proof"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toEndOf="@id/id_text"
                    android:text="Select"
                    android:textColor="@color/dark_grey"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/done_id_proof"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/id_proof"
                    android:src="@drawable/ic_baseline_done_24"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/aadhaar_card_front_proof"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@color/pressed_bg" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20sp"
                android:paddingVertical="5dp">

                <TextView
                    android:id="@+id/aadhaar_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Aadhaar card back: "
                    android:textColor="@color/black" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/aadhaar_back"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toEndOf="@id/aadhaar_"
                    android:text="Select"
                    android:textColor="@color/dark_grey"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/done_aadhaar_back"
                    android:layout_width="20dp"
                    android:layout_height="20sp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/aadhaar_back"
                    android:src="@drawable/ic_baseline_done_24"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/aadhaar_card_back_proof"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@color/pressed_bg" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20sp"
                android:paddingVertical="5dp">

                <TextView
                    android:id="@+id/address_text"
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:text="@string/government_address_id_proof"
                    android:textColor="@color/black" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/get_address"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toEndOf="@id/address_text"
                    android:text="Select"
                    android:textColor="@color/dark_grey"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/done_address"
                    android:layout_width="20dp"
                    android:layout_height="20sp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/get_address"
                    android:src="@drawable/ic_baseline_done_24"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/address_text_proof"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@color/pressed_bg" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20sp"
                android:paddingVertical="5dp">

                <TextView
                    android:id="@+id/fam_address_text"
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Family Address Id Proof : "
                    android:textColor="@color/black" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/family_Address"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toEndOf="@id/fam_address_text"
                    android:text="Select"
                    android:textColor="@color/dark_grey"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/done_family_add"
                    android:layout_width="20dp"
                    android:layout_height="20sp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/family_Address"
                    android:src="@drawable/ic_baseline_done_24"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/address_family_proof"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@color/pressed_bg" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20sp"
                android:paddingVertical="5dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/deposit_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Deposit Amount: "
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginStart="28dp"
                    android:layout_toEndOf="@id/deposit_amount"
                    android:background="@drawable/rect_grey_strock"
                    android:hint="₹ 500 "
                    android:inputType="number"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="8dp"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20sp"
                android:paddingVertical="5dp">

                <TextView
                    android:id="@+id/approval_name_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="User Name : "
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/special_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginStart="52dp"
                    android:layout_toEndOf="@id/approval_name_"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:hint="Enter name "
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="8dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20sp"
                android:paddingVertical="5dp">

                <TextView
                    android:id="@+id/introduce_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Password : "
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/introduce_name_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginStart="59dp"
                    android:layout_toEndOf="@id/introduce_name"
                    android:background="@android:color/transparent"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="8dp"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20sp"
                android:paddingVertical="5dp">

                <TextView
                    android:id="@+id/introduce_id_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Email Id : "
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/introduce_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginStart="71dp"
                    android:layout_toEndOf="@id/introduce_id_"
                    android:background="@android:color/transparent"
                    android:hint="Email Id "
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="8dp"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20sp"
                android:paddingVertical="5dp">

                <TextView
                    android:id="@+id/phone_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Phone : "
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginStart="80dp"
                    android:layout_toEndOf="@id/phone_"
                    android:background="@android:color/transparent"
                    android:hint="Phone"
                    android:inputType="number"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="8dp"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20sp"
                android:paddingVertical="5dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/agencyCode_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Agency Code: "
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/agencyCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toEndOf="@id/agencyCode_"
                    android:background="@android:color/transparent"
                    android:hint="Agency Code"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="8dp"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20sp"
                android:paddingVertical="5dp">

                <TextView
                    android:id="@+id/address_proof"
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Address proof (optional) : "
                    android:textColor="@color/black" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/address_proof_optional"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toEndOf="@id/address_proof"
                    android:text="Select"
                    android:textColor="@color/dark_grey"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:background="@drawable/dot_grey_strock">

                <ImageView
                    android:id="@+id/image_set"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />


                <LinearLayout
                    android:id="@+id/add_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_plus__4_"
                        android:backgroundTint="#fa02e6"
                        android:contentDescription="@string/description" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Click to upload Passport size image"
                        android:textColor="#fa02e6"
                        android:textSize="14sp" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20sp"
                android:paddingVertical="5dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/Bank_Detail"
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Bank Details : "
                    android:textColor="@color/black" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bank_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toEndOf="@id/Bank_Detail"
                    android:text="Select"
                    android:textColor="@color/dark_grey"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/done_bank_detail"
                    android:layout_width="20dp"
                    android:layout_height="20sp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/bank_detail"
                    android:src="@drawable/ic_baseline_done_24"
                    android:visibility="gone" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:background="@color/grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20sp"
                android:paddingVertical="5dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/payment_gateway"
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Payment Account Details : "
                    android:textColor="@color/black" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/select_payment_method"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toEndOf="@id/payment_gateway"
                    android:text="Select"
                    android:textColor="@color/dark_grey"
                    android:textSize="12sp" />

            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/apply_for_agency"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/gradienttwo"
                android:elevation="2dp"
                android:fontFamily="sans-serif-medium"
                android:text="Apply"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>