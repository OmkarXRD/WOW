<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Profile.Friends.FollowingFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/editfollowingLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:paddingVertical="10dp">

            <ImageView

                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/back__1_"
                android:id="@+id/followingBackImg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:text="Following"/>
        </LinearLayout>

        <View
            android:id="@+id/editFollowingLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/light_grey_bg_color"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/followingRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/visitors_rv_design"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />


    </LinearLayout>






</FrameLayout>