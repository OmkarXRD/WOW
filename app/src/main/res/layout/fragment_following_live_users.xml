<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Home.Related.RelatedLive.FollowingLiveUsersFragment">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">



   <TextView
       android:id="@+id/noLiveFollowingTv"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerInParent="true"
       android:text="No Live User"
       android:textColor="@color/dark_grey"
       android:visibility="gone"
       android:textSize="18sp" />

   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/followingLiveRV"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
       tools:listitem="@layout/following_live_users_rv_design"
       android:layout_marginTop="2.5dp"
       android:layout_marginHorizontal="2.5dp"
       app:spanCount="2"
       />
   </RelativeLayout>

</FrameLayout>