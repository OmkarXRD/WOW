        <RelativeLayout
            android:id="@+id/homeRlTop1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/nameHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/Related"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView

                        android:id="@+id/relatedText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="10dp"
                        android:text="RELATED"
                        android:letterSpacing="0.08"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:shadowColor="#1E1E1E"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="3"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/relatedView"
                        android:layout_width="15dp"
                        android:layout_height="1.5dp"
                        android:shadowColor="#1E1E1E"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:shadowRadius="3"
                        android:elevation="@dimen/dp_10"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/white" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/Popular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toEndOf="@id/Related"
                    android:orientation="vertical">

                    <TextView

                        android:id="@+id/popularText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="10dp"
                        android:text="POPULAR"
                        android:textColor="@color/white"
                        android:letterSpacing="0.08"
                        android:shadowColor="#1E1E1E"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="3"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/popularView"
                        android:layout_width="15dp"
                        android:layout_height="1.5dp"
                        android:shadowColor="#1E1E1E"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:elevation="@dimen/dp_10"
                        android:shadowRadius="3"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/white"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Nearby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toEndOf="@id/Popular"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nearbyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="10dp"
                        android:text="NEARBY"
                        android:shadowColor="#1E1E1E"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:letterSpacing="0.08"
                        android:shadowRadius="3"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/nearbyView"
                        android:layout_width="15dp"
                        android:layout_height="1.5dp"
                        android:layout_gravity="center_horizontal"
                        android:shadowColor="#1E1E1E"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:shadowRadius="3"
                        android:elevation="@dimen/dp_10"
                        android:background="@color/white"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/hotspot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:paddingHorizontal="7.5dp">

            <!--            android:id="@+id/hotspot"-->
            <ImageView
                android:id="@+id/HomeBroadImg"
                android:layout_width="32dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:elevation="@dimen/dp_20"
                android:scaleType="fitXY"
                android:src="@drawable/icon_live_ftr"
                app:tint="@color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/hotspot"
            android:paddingHorizontal="10dp">

            <!--            android:id="@+id/search"-->
            <ImageView
                android:id="@+id/search_bar"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:elevation="@dimen/dp_20"
                android:scaleType="fitXY"
                android:src="@drawable/icon_search"
                app:tint="@color/white" />


        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/idRLContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/idIVAndroid"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@id/idTVHeading"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="20dp"
            android:src="@drawable/guitar" />

        <TextView
            android:id="@+id/idTVHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:padding="20dp"
            android:text="Geeks for Geeks"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/homeFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rlHomeFragmentTop"
        android:background="@color/white" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="70dp"
        android:elevation="10dp"
        android:visibility="gone"
        android:src="@drawable/floating" />

    <ImageView
        android:id="@+id/chiragIV"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        app:lottie_rawRes="@raw/spinnnww"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="70dp"
        android:elevation="@dimen/dp_10"
        android:background="@drawable/spinnwheell"
        app:lottie_autoPlay="true"/>


</RelativeLayout>