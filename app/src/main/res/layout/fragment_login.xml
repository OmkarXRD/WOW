<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragments.SignUp.LoginFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--    <ImageView-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="80dp"-->
        <!--        android:layout_alignParentStart="true"-->
        <!--        android:layout_marginTop="50dp"-->
        <!--        android:src="@drawable/image_1" />-->

        <!--<ImageView-->
        <!--    android:layout_width="match_parent"-->
        <!--    android:layout_height="80dp"-->
        <!--    android:src="@drawable/wows_new_logo"-->
        <!--    android:contentDescription="@string/description"-->
        <!--    />-->
        <RelativeLayout
            android:id="@+id/rlLogos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="130dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="35dp"
                android:contentDescription="@string/description"
                android:src="@drawable/logo_img" />
        </RelativeLayout>

<!--        android:background="@drawable/loginwithgoogle"-->
        <LinearLayout
            android:id="@+id/login_with_google"
            android:layout_width="220dp"
            android:layout_height="34dp"
            android:layout_above="@+id/llLoginWithFacebook"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="20dp"
            android:elevation="2dp"
            android:gravity="center"
            android:layout_marginTop="1dp"
            android:background="@drawable/goole_bg"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/google_3"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign in with Google"
                    android:textSize="16sp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"
                    android:singleLine="true"/>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLoginWithFacebook"
            android:layout_width="220dp"
            android:layout_height="34dp"
            android:layout_above="@+id/loginWithMobile"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/login_fb"
            android:elevation="3dp"
            android:gravity="center"
            android:orientation="horizontal">

        </LinearLayout>


        <LinearLayout
            android:id="@+id/loginWithMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/llTerms2"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/loginPhonell"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/oval_image_login">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:src="@drawable/group_6" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/oval_image_login"
                android:visibility="visible">

                <ImageView
                            android:id="@+id/snapChatLoginImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:src="@drawable/login_snapchat_icon" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llTerms2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/llTerms"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/switchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/app_pink_color"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By Continuing you agree to the "
                android:textColor="@color/grey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/loginTermsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="Terms of"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTerms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/loginServiceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="and"
                android:textColor="@color/grey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/loginPrivacyTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="Privacy Policy"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>