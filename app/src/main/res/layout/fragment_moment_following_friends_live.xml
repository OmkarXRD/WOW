<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Home.Related.RelatedMoment.MomentFollowingFriendsLiveFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/followingFriendsRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:listitem="@layout/following_and_friends_rv_design"
        app:spanCount="2"
        android:layout_marginVertical="2.5dp"
        android:layout_marginHorizontal="2.5dp"
        />

    <TextView
        android:id="@+id/noLiveFollowingSqure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Live Found"
        android:layout_gravity="center"
        android:layout_centerInParent="true"/>
</FrameLayout>