<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ED050505"
    tools:context=".Fragments.Profile.OtherUser">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1000dp">

                <RelativeLayout
                    android:id="@+id/otherUsertopRl"
                    android:layout_width="match_parent"
                    android:elevation="@dimen/dp_20"
                    android:layout_height="380dp">
                    <RelativeLayout
                        android:id="@+id/liveFamilyLlayout"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dp_50"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:gravity="center"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:elevation="10dp"
                            android:text="1"
                            android:textColor="@color/black"
                            android:textSize="6sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/age"
                            android:layout_width="60dp"
                            android:layout_height="25dp"
                            android:layout_marginHorizontal="4dp"
                            android:elevation="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/family_badge_23" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:elevation="@dimen/dp_10"
                            android:layout_marginEnd="5dp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/familyNameTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="1dp"
                                android:ellipsize="marquee"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:fontFamily="sans-serif-medium"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="this for family text"
                                android:textColor="@color/white"
                                android:textSize="8sp"
                                android:visibility="visible" />

                        </RelativeLayout>

                    </RelativeLayout>
                </RelativeLayout>

                <com.smarteist.autoimageslider.SliderView
                    android:id="@+id/imageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:visibility="gone"
                    app:sliderAnimationDuration="600"
                    app:sliderAutoCycleDirection="right"
                    app:sliderAutoCycleEnabled="false"
                    app:sliderIndicatorAnimationDuration="600"
                    app:sliderIndicatorGravity="center_horizontal|bottom"
                    app:sliderIndicatorMargin="30dp"
                    app:sliderIndicatorOrientation="horizontal"
                    app:sliderIndicatorPadding="3dp"
                    app:sliderIndicatorRadius="2dp"
                    app:sliderIndicatorSelectedColor="#5A5A5A"
                    app:sliderIndicatorUnselectedColor="#FFF"
                    app:sliderScrollTimeInSec="1"
                    app:sliderStartAutoCycle="false" />

                <ImageView
                    android:id="@+id/othrUserBgImg"
                    android:layout_width="match_parent"
                    android:layout_height="393dp"
                    android:contentDescription="@string/description"
                    android:scaleType="fitXY"
                    android:src="@color/black"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="160dp">

                    <com.opensource.svgaplayer.SVGAImageView
                        android:id="@+id/profieFrame"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_100"
                        android:elevation="12dp"
                        android:scaleType="fitCenter"
                        app:antiAlias="true" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/othrUserCircleImg"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        android:elevation="@dimen/dp_10"
                        android:src="@drawable/demo_user_profile_img"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="2dp" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/othrUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayout"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Username"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:textStyle="bold|italic" />

                <LinearLayout
                    android:id="@+id/otheUser6756"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/othrUserName"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/vipLayout"
                        android:layout_width="40dp"
                        android:layout_height="@dimen/dp_20"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/vip1img">
                    </ImageView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/round_shape_corners_8dp"
                        android:backgroundTint="#2990f9"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:paddingHorizontal="5dp">

                        <ImageView
                            android:id="@+id/genderImg"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="3dp"
                            android:contentDescription="@string/description"
                            android:src="@drawable/male"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/round_shape_corners_8dp"
                        android:backgroundTint="#0ed8a3"
                        android:orientation="horizontal"
                        android:paddingHorizontal="5dp">

                        <ImageView
                            android:id="@+id/ageWithGenderImg"
                            android:layout_width="11dp"
                            android:layout_height="14dp"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="@string/description"
                            android:src="@drawable/male"
                            app:tint="@color/white" />

                        <TextView
                            android:id="@+id/otherAgeTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:text="35"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/round_shape_corners_8dp"
                        android:backgroundTint="#e97a30"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:paddingHorizontal="5dp">

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="@string/description"
                            android:src="@drawable/male"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:text="35"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/round_shape_corners_8dp"
                        android:backgroundTint="#e97a30"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:paddingHorizontal="5dp">

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="@string/description"
                            android:src="@drawable/male"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:text="35"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/coinAjency"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@drawable/dollarrr"
                        android:visibility="gone"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/anchorStatus"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_20"
                        android:visibility="gone"
                        android:background="@drawable/microphoneicon">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="@dimen/dp_12"
                            android:src="@drawable/microphoneicon" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/ajencystatus"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_20"
                        android:visibility="gone"
                        android:background="@drawable/ajencytag">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="@dimen/dp_12"
                            android:src="@drawable/microphoneicon" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/sendingLayout"
                        android:layout_width="50dp"
                        android:layout_height="15dp"
                        android:layout_marginStart="@dimen/dp_5"
                        android:background="@drawable/back_orange">

                        <ImageView
                            android:id="@+id/lvlimg"
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="@dimen/dp_12"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dp_5"
                            android:src="@drawable/starlevel"/>

                        <TextView
                            android:id="@+id/WLevelTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_marginEnd="@dimen/dp_5"
                            android:layout_toRightOf="@id/lvlimg"
                            android:text="110"
                            android:textColor="@color/white"
                            android:textSize="9sp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/receiveRL"
                        android:layout_width="50dp"
                        android:layout_height="15dp"
                        android:layout_marginStart="@dimen/dp_5">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/receivingImageView"
                            android:scaleType="fitXY"/>
                        <ImageView
                            android:id="@+id/imgg"
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="@dimen/dp_12"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dp_5"
                            android:src="@drawable/receiveicon"/>

                        <TextView
                            android:id="@+id/editProfileMyLvlTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_marginEnd="2dp"
                            android:layout_toRightOf="@id/imgg"
                            android:text="110"
                            android:textColor="@color/white"
                            android:textSize="9sp" />
                    </RelativeLayout>


                </LinearLayout>

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/progressImg"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:lottie_rawRes="@raw/live_user_lottie"
                        android:contentDescription="@string/description"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp"
                        android:layout_below="@+id/otheUser6756"
                        android:visibility="gone"
                        app:lottie_loop="true"
                        app:lottie_autoPlay="true"
                        />


                <LinearLayout
                    android:id="@+id/othrUseTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/otheUser6756"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/otherUserIdTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="ID:889974987"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="3dp"
                        android:background="@color/grey" />

                    <TextView
                        android:id="@+id/countryTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="India"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="3dp"
                        android:background="@color/grey" />

                    <TextView
                        android:id="@+id/othrUsrFansTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="Fans: 150"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="3dp"
                        android:background="@color/grey" />

                    <TextView
                        android:id="@+id/offlineStatusTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/othrUseRoundRL"
                    android:layout_width="match_parent"
                    android:layout_height="700dp"
                    android:layout_below="@+id/otherUsertopRl"
                    android:background="@drawable/top_sheet_round_corners">

                    <TextView
                        android:id="@+id/bioTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:text="logo Lorem ipsum, or lipsum as it is sometimes known lipsumlipsum"
                        android:textColor="@color/grey"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/otherUserTablayout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/bioTv"
                        android:layout_marginTop="5dp"
                        app:tabGravity="fill"
                        app:tabIndicatorColor="@color/black"
                        app:tabIndicatorFullWidth="false"
                        app:tabMinWidth="10dp"
                        app:tabTextColor="@color/grey">

                    </com.google.android.material.tabs.TabLayout>

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/otherUserViewPager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/otherUserTablayout"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="70dp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_above="@+id/othrUseRoundRL"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/more__2_"
                    android:visibility="gone"
                    app:tint="@color/white" />


            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="40dp">

            <ImageView
                android:id="@+id/otherUserIdbackImg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/back__1_"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/othrUsrTopNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@+id/otherUserIdbackImg"
                android:text="Username"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/othrUserThreeDotsImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="10dp"
                android:padding="@dimen/dp_10"
                android:src="@drawable/more__2_"
                app:tint="@color/white" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/bottomBtnsLyout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/othrUsrChatRL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_corners_8dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="5dp"
                        android:contentDescription="@string/description"
                        android:src="@drawable/message87"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chat"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sendFriendRequestRL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_corners_8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/other"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="5dp"
                        android:contentDescription="@string/description"
                        android:src="@drawable/add_user__5_"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/otherUserRequestTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/othrUsrFollowingRL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_corners_8dp"
                android:backgroundTint="#01acfe">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/followingImg"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="5dp"
                        android:contentDescription="@string/description"
                        android:src="@drawable/check__4_"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/othrUsrFollowingTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Following"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>