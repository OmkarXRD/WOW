<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Profile.OtherUserTabs.OtherUserProfileTab">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/profileTabFamilyTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Family"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>

        <RelativeLayout
            android:id="@+id/otherUseProfileBatch"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/profileTabFamilyTV"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/profile_game_image">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/otherProfileCircleImg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/photo3"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amir Sonia"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/otherProfileCircleImg"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_profile"
                    app:tint="@color/white"
                    android:contentDescription="@string/description"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"
                    android:textSize="14sp"
                    android:text="100/280"/>

            </LinearLayout>



        </RelativeLayout>

        <TextView
            android:id="@+id/aboutmeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="About me"
            android:layout_below="@+id/otherUseProfileBatch"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>


        <LinearLayout
            android:id="@+id/gamesLlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aboutmeTV"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="7dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/round_stock_profile_tab"
                android:paddingVertical="4dp">

                <ImageView
                    android:id="@+id/singleImg"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/img1"
                    android:contentDescription="@string/description"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Single"
                    android:layout_toRightOf="@+id/singleImg"
                    android:layout_marginStart="@dimen/dp_5"
                    android:textSize="12sp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="7dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/round_stock_profile_tab"
                android:paddingVertical="4dp">

                <ImageView
                    android:id="@+id/criketImg"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/cricket"
                    android:contentDescription="@string/description"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Cricket"
                    android:layout_toRightOf="@+id/criketImg"
                    android:layout_marginStart="@dimen/dp_5"
                    android:textSize="12sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="7dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/round_stock_profile_tab"
                android:paddingVertical="4dp">

                <ImageView
                    android:id="@+id/TravelImg"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/flight"
                    android:contentDescription="@string/description"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Travel"
                    android:layout_toRightOf="@+id/TravelImg"
                    android:layout_marginStart="@dimen/dp_5"
                    android:textSize="12sp"/>

            </RelativeLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/myCpTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_below="@+id/gamesLlayout"
android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="My CP"
            android:textColor="@color/black"/>


        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/myCpTV"
            android:backgroundTint="#C1495E"
            android:background="@drawable/rect_round_corners">

           <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/profileTabCirImg2"
               android:layout_width="35dp"
               android:layout_height="35dp"
               android:layout_centerHorizontal="true"
               android:src="@drawable/photo3"
               android:layout_marginTop="15dp"
               app:civ_border_color="@color/white"
               app:civ_border_width="1dp"/>
            <TextView
                android:id="@+id/amirTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="amir"
                android:layout_below="@+id/profileTabCirImg2"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textStyle="italic"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:orientation="horizontal"
                android:backgroundTint="#e97a30"
                android:paddingVertical="2dp"
                android:layout_below="@+id/amirTV"
                android:layout_centerHorizontal="true"
                android:background="@drawable/round_shape_corners_8dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LV3"
                    android:textSize="10sp"
                    android:layout_marginStart="2dp"
                    android:textColor="@color/white"/>
            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>
</FrameLayout>