<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Fragments.SignUp.OtpFragment">

    <RelativeLayout
        android:id="@+id/rlPhoneTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:paddingVertical="10dp">

        <ImageView
            android:id="@+id/otpBackImg"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:rotation="180"
            android:src="@drawable/ic_baseline_arrow_forward_24"
            app:tint="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/otpBackImg"
            android:fontFamily="sans-serif-medium"
            android:text="OTP"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/imgSmartPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/inter"
            android:text="A verification code has been sent to you."
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgSmartPhone"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter_medium"
            android:text="+91 9876543210"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </RelativeLayout>
    <in.aabhasjindal.otptextview.OtpTextView
        android:id="@+id/otp_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:elevation="4dp"
        android:textColor="@color/black"
        app:bar_error_color="@color/black"
        app:bar_height="2dp"
        app:box_margin_left="5dp"
        app:height="40dp"
        app:length="6"
        app:otp_box_background="@drawable/full_round_shape"
        app:otp_text_size="24dp"
        app:width="40dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnVerificationCode"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/verification_code_button"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="gone"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/verification_code_button"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="visible"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timer"
        android:layout_marginVertical="20dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="00:58"
        android:textColor="#000000"
        android:textSize="14sp" />


</LinearLayout>