<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/homeOwnerTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:singleLine="true"
        android:text="Homeowner"
        android:textAllCaps="false"
        android:textColor="@color/grey"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/inviteAudienceLinarLyout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homeOwnerTv"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/inviteAudienceCirImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/homeOwnerTv"
            android:src="@drawable/images" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/inviteAudienceNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:singleLine="true"
                android:text="King"
                android:textColor="@color/black"
                android:textSize="16sp"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hostIconImg"
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/host_icon"
                    app:tint="@color/green" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/adminIconImg"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/description"
                        android:src="@drawable/live_admin_icon"
                        android:visibility="gone"
                        app:tint="@color/green" />

                    <LinearLayout
                        android:id="@+id/genderRl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/round_shape_corners_8dp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="5dp">


                        <ImageView
                            android:id="@+id/bottomProfileGenderImg"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="@string/description"
                            android:src="@drawable/male"
                            app:tint="@color/white" />

                        <TextView
                            android:id="@+id/bottomProfileAgeTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:text="35"
                            android:textColor="@color/white"
                            android:textSize="10sp" />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/inviteAudienceLinarLyout"
        android:layout_marginStart="45dp"
        android:layout_marginTop="5dp"
        android:background="@color/grey" />


</RelativeLayout>