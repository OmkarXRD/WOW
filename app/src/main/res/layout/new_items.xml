<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="3dp"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:id="@+id/meetfragCardViewId"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginHorizontal="3dp"
        app:cardCornerRadius="6dp"
        android:layout_marginVertical="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/photo" />

            <ImageView
                android:id="@+id/lockLiveImage"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/padlock" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/linear_new_background"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:paddingHorizontal="5dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="18dp"
                    android:paddingVertical="2dp"
                    android:src="@drawable/icon_profile_ftr"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/Name_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="2"
                    android:maxLength="8"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/liveTvmore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rect_corners_6dp"
                android:backgroundTint="@color/greeni"
                android:orientation="horizontal"
                android:paddingHorizontal="4dp"
                android:paddingVertical="3dp">

                <TextView
                    android:id="@+id/newMorenameUSer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="name"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>