<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearL"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginVertical="100dp"
        android:elevation="10dp"
        android:paddingHorizontal="20dp"
        android:background="@drawable/logoutdesign"
        android:orientation="vertical">

        <TextView
            android:id="@+id/warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:text="Set Room Password"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <in.aabhasjindal.otptextview.OtpTextView
            android:id="@+id/liveLock_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:elevation="4dp"
            android:textColor="@color/black"
            app:bar_error_color="@color/black"
            app:bar_height="2dp"
            app:box_margin_left="5dp"
            app:height="40dp"
            app:length="6"
            app:otp_box_background="@drawable/full_round_shape"
            app:otp_text_size="24dp"
            app:width="40dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancle_pin"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:background="@drawable/announcement"
                android:text="Cancel"
                android:layout_marginEnd="20dp"
                android:textColor="@color/black"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/confirm_pin"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:background="@drawable/announcement"
                android:text="Confirm"
                android:layout_marginStart="20dp"
                android:backgroundTint="@color/green"
                android:textColor="@color/white"/>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>