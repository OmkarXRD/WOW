<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:id="@+id/rlbottomsheet"
        android:background="@drawable/backgroundstroke"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp">

            <ImageView
                android:id="@+id/cross"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/cross" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/cross"
                android:layout_centerHorizontal="true"
                android:src="@drawable/fires" />

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You can speed up Your family's level up process by completing the following tasks."
            android:textColor="@color/black"
            android:layout_marginHorizontal="30dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="14sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@drawable/maindesign"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_marginHorizontal="10dp">
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grey"
                android:layout_centerHorizontal="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tasks"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Points"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_centerHorizontal="true"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Daily login"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#3AD553"
                        android:padding="5dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:weightSum="2"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+20"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_centerHorizontal="true"
                            android:padding="5dp"/>
                        <ImageView
                            android:layout_width="12sp"
                            android:layout_height="12sp"
                            android:src="@drawable/fires"
                            android:layout_toRightOf="@id/tv1"
                            android:layout_centerVertical="true"/>



                    </RelativeLayout>


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_centerHorizontal="true"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Every 10 minutes watched daily"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#3AD553"
                        android:padding="5dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp">
                        <RelativeLayout
                            android:id="@+id/rll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                            <TextView
                                android:id="@+id/tv2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" +50"
                                android:layout_marginStart="10dp"
                                android:layout_centerVertical="true"
                                android:textSize="14sp"
                                android:textColor="@color/black"/>
                            <ImageView
                                android:id="@+id/img1"
                                android:layout_width="12sp"
                                android:layout_height="12sp"
                                android:src="@drawable/fires"
                                android:layout_toRightOf="@id/tv2"
                                android:layout_centerVertical="true"/>

                            <TextView
                                android:id="@+id/tv3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" / up to +250"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/img1"
                                android:textSize="14sp"
                                android:textColor="@color/black"/>
                            <ImageView
                                android:layout_width="12sp"
                                android:layout_height="12sp"
                                android:src="@drawable/fires"
                                android:layout_toRightOf="@id/tv3"
                                android:layout_centerVertical="true"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="per day"
                            android:layout_centerVertical="true"
                            android:layout_below="@id/rll"
                            android:layout_centerHorizontal="true"
                            android:textSize="14sp"
                            android:padding="2dp"
                            android:textColor="@color/black"/>

                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_centerHorizontal="true"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/every_10_minutes_on_mic_daily"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:textColor="#3AD553"
                        android:gravity="center"
                        android:padding="5dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp">
                        <RelativeLayout
                            android:id="@+id/rll1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true">


                            <TextView
                                android:id="@+id/tv21"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" +150"
                                android:layout_centerVertical="true"
                                android:textSize="14sp"
                                android:textColor="@color/black"/>
                            <ImageView
                                android:id="@+id/img11"
                                android:layout_width="12sp"
                                android:layout_height="12sp"
                                android:src="@drawable/fires"
                                android:layout_toRightOf="@id/tv21"
                                android:layout_centerVertical="true"/>

                            <TextView
                                android:id="@+id/tv31"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" / up to +750"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/img11"
                                android:textSize="14sp"
                                android:textColor="@color/black"/>
                            <ImageView
                                android:layout_width="12sp"
                                android:layout_height="12sp"
                                android:src="@drawable/fires"
                                android:layout_toRightOf="@id/tv31"
                                android:layout_centerVertical="true"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="per day"
                            android:layout_centerVertical="true"
                            android:layout_below="@id/rll1"
                            android:layout_centerHorizontal="true"
                            android:textSize="14sp"
                            android:padding="2dp"
                            android:textColor="@color/black"/>

                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_centerHorizontal="true"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Recharge"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:textColor="#3AD553"
                        android:gravity="center"
                        android:padding="5dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp">
                        <RelativeLayout
                            android:id="@+id/rll3"
                            android:layout_width="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_height="wrap_content">


                            <TextView
                                android:id="@+id/tv213"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" +1"
                                android:layout_centerVertical="true"
                                android:textSize="14sp"
                                android:textColor="@color/black"/>

                            <ImageView
                                android:id="@+id/img113"
                                android:layout_width="12sp"
                                android:layout_height="12sp"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@id/tv213"
                                android:src="@drawable/coins_img" />

                            <TextView
                                android:id="@+id/tv313"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="=+1"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/img113"
                                android:textSize="14sp"
                                android:textColor="@color/black"/>
                            <ImageView
                                android:layout_width="12sp"
                                android:layout_height="12sp"
                                android:src="@drawable/fires"
                                android:layout_toRightOf="@id/tv313"
                                android:layout_centerVertical="true"/>
                        </RelativeLayout>


                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_centerHorizontal="true"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Send gifts"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#3AD553"
                        android:padding="5dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp">
                        <RelativeLayout
                            android:id="@+id/rll34"
                            android:layout_width="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_height="wrap_content">


                            <TextView
                                android:id="@+id/tv2134"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" +1"
                                android:layout_centerVertical="true"
                                android:textSize="14sp"
                                android:textColor="@color/black"/>

                            <ImageView
                                android:id="@+id/img1134"
                                android:layout_width="12sp"
                                android:layout_height="12sp"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/tv2134"
                                android:src="@drawable/coins_img" />

                            <TextView
                                android:id="@+id/tv3134"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="=+1"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/img1134"
                                android:textSize="14sp"
                                android:textColor="@color/black"/>
                            <ImageView
                                android:layout_width="12sp"
                                android:layout_height="12sp"
                                android:src="@drawable/fires"
                                android:layout_toRightOf="@id/tv3134"
                                android:layout_centerVertical="true"/>
                        </RelativeLayout>


                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_centerHorizontal="true"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Receive gifts"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#3AD553"
                        android:padding="5dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp">
                        <RelativeLayout
                            android:id="@+id/rll345"
                            android:layout_width="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_height="wrap_content">


                            <TextView
                                android:id="@+id/tv21345"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" +1"
                                android:layout_centerVertical="true"
                                android:textSize="14sp"
                                android:textColor="@color/black"/>
                            <ImageView
                                android:id="@+id/img11345"
                                android:layout_width="12sp"
                                android:layout_height="12sp"
                                android:src="@drawable/diamond"
                                android:layout_toRightOf="@id/tv21345"
                                android:layout_centerVertical="true"/>

                            <TextView
                                android:id="@+id/tv31345"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="=+5"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/img11345"
                                android:textSize="14sp"
                                android:textColor="@color/black"/>
                            <ImageView
                                android:layout_width="12sp"
                                android:layout_height="12sp"
                                android:src="@drawable/fires"
                                android:layout_toRightOf="@id/tv31345"
                                android:layout_centerVertical="true"/>
                        </RelativeLayout>


                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

</LinearLayout>